{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "dist/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "classnames",
      "jest",
      "react",
      "react-dom",
    ]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
  ],
}